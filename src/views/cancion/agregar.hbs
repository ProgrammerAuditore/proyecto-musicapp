<div class="alert alert-light" role="alert">
  <h1 class="alert-heading">Agregar canción</h1>
  <p>Agrega una canción a tu lista</p>
  <hr>
</div>

{{>alerts/alerts}}

<div class="card m-4">
    <div class="card-header">
      <ul class="nav nav-pills card-header-pills"></ul>
    </div>
    <div class="card-body">
      <form action="/cancion/registrar" method="POST">
        <div class="mb-3">
          <label for="titulo" class="form-label">Titulo</label>
          <input
          type="text" 
          class="form-control"
          placeholder="Ej. Sigo Aqui" 
          autocomplete="off"
          value="{{cancion.titulo}}"
          name="titulo" 
          id="titulo" 
          required
          />
        </div>

        <div class="mb-3">
          <label for="grupo" class="form-label">Grupo</label>
          <input 
          type="text" 
          class="form-control"
          placeholder="Ej. Alex Ubago" 
          autocomplete="off"
          value="{{cancion.grupo}}"
          name="grupo" 
          id="grupo"
          required 
          />
        </div>

        <div class="mb-3">
          <label for="genero" class="form-label">Genero</label>
          <input 
          type="text" 
          class="form-control"
          placeholder="Ej. Pop" 
          autocomplete="off"
          value="{{cancion.genero}}"
          name="genero" 
          id="genero" 
          required
          />
        </div>

        <div class="mb-3">
          <label for="anho" class="form-label">Año</label>
          <input 
          type="number" 
          class="form-control"
          placeholder="Ej. 2002" 
          autocomplete="off"
          value="{{cancion.anho}}"
          name="anho" 
          id="anho" 
          required
          />
        </div>
        <input type="submit" class="btn btn-success" value="Agregar">
      </form>
    </div>
  </div>
</div>
